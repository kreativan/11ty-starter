    <h3 class="group mt-10 mb-5 font-light italic">
      Loop Trough <span class="font-extrabold group-hover:text-sky-600">Pages</span> Collection
    </h3>

    <ul class="list-disc list-inside mt-5">
    {% for page in collections.pages %}
      <li class="hover:text-sky-600">
        <a href="{{page.url}}">{{page.data.title}}</a>
      </li>
    {%- endfor -%}
    </ul>

    <h3 class="group font-light italic mt-10">
      Get <span class="font-extrabold group-hover:text-sky-600">Random People</span> from api end-point
    </h3>

    <ul class="list-decimal list-inside mt-5">
    {% for person in people %}
      <li>
        {{person.name.first}} {{person.name.last}}
      </li>
    {%- endfor -%}
    </ul>

    <h3 class="text-xl italic mt-10 mb-3">Page <span class="font-extrabold italic">dump</span><h3>

    <div>
      <pre class="bg-neutral-100 p-5 text-sm"><code>{{ page | dump(2) }}</code></pre>
    </div>


  </div>
